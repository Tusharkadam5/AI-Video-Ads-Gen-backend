generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum AuthProviderType {
  GOOGLE
  FACEBOOK
}

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  passwordHash  String?
  fullName      String?
  profileImage  String?
  isEmailVerified Boolean @default(false)
  isActive      Boolean   @default(true)
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  products      Product[]
  adRequests    AdRequest[]
  authProviders AuthProvider[]
  refreshTokens RefreshToken[]
}

model AuthProvider {
  id             String           @id @default(uuid())
  userId         String
  provider       AuthProviderType
  providerUserId String
  providerEmail  String?
  createdAt      DateTime         @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerUserId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  isRevoked Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Product {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String
  images      String[]
  logo        String?     // Optional field for product logo
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  adRequests AdRequest[]
}

enum Platform {
  YOUTUBE
  INSTAGRAM
  FACEBOOK
}

enum AspectRatio {
  RATIO_9_16
  RATIO_1_1
  RATIO_16_9
}

enum Language {
  ENGLISH
  SPANISH
  FRENCH
  GERMAN
  ITALIAN
}

enum AdDuration {
  SECONDS_15
  SECONDS_30
  SECONDS_60
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model AdRequest {
  id             String      @id @default(uuid())
  userId         String
  productId      String
  platform       Platform
  aspectRatio    AspectRatio
  language       Language
  targetAudience String
  duration       AdDuration
  status         JobStatus   @default(PENDING)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user            User             @relation(fields: [userId], references: [id])
  product         Product          @relation(fields: [productId], references: [id])
  generatedScript GeneratedScript?
  videoJob        VideoJob?
}

model GeneratedScript {
  id          String   @id @default(uuid())
  adRequestId String   @unique
  content     Json
  createdAt   DateTime @default(now())

  adRequest AdRequest @relation(fields: [adRequestId], references: [id])
}

model VideoJob {
  id          String    @id @default(uuid())
  adRequestId String    @unique
  status      JobStatus @default(PENDING)
  jobBoardId  String?
  resultUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  adRequest AdRequest @relation(fields: [adRequestId], references: [id])
}
